{
    "name": "WriteFreely",
    "id": "writefreely",
    "packaging_format": 1,
    "description": {
        "en": "For starting a minimalist, federated blog — or an entire community.",
        "fr": "Permet de créer un blog fédéré minimaliste ou une communauté entière."
    },
    "version": "0.13.0~ynh1",
    "url": "https://writefreely.org",
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "yalh76"
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "admin",
                "type": "user",
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "password",
                "type": "password",
                "example": "Choose a password"
            },
            {
                "name": "single_user",
                "type": "boolean",
                "ask": {
                    "en": "Choose if you want a Single User Blog?",
                    "fr": "Souhaitez vous un blog pour un seul utilisateur ?"
                },
                "default": true
            }
        ]
    }
}
