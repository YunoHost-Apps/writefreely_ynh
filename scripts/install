#!/bin/bash


source /usr/share/yunohost/helpers

#=================================================
# RETRIEVE ARGUMENTS FROM THE MANIFEST
#=================================================

if ynh_in_ci_tests; then
	admin="test"
fi

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================

ynh_script_progression "Setting up source files..."

ynh_setup_source --dest_dir="$install_dir"

#=================================================
# SET SYSTEM CONFIGURATION
#=================================================

ynh_script_progression "Configuring web server to serve $app on $domain..."

ynh_config_add_nginx

ynh_script_progression "Configuring $app system service..."

ynh_config_add_systemd

ynh_script_progression "Adding $app service to Yunohost admin panel..."

yunohost service add $app --description="WriteFreely daemon" --log="/var/log/$app/$app.log"

#=================================================
# SET WRITEFREELY CONFIGURATION
#=================================================

ynh_script_progression "Adding $app configuration..."

ynh_config_add --template="config.ini" --destination="$install_dir/config.ini"

chmod 600 "$install_dir/config.ini"

#=================================================
# INITIALIZE WRITEFREELY
#=================================================

ynh_script_progression "Initializing $app..."

pushd $install_dir
	ynh_exec_as_app ./writefreely --init-db
	ynh_exec_as_app ./writefreely --gen-keys
	ynh_exec_as_app ./writefreely --create-admin "$admin":"$password"
popd

#=================================================
# START SYSTEMD SERVICE
#=================================================

ynh_script_progression "Starting $app system service..."

ynh_systemctl --service=$app --action="start" --log_path="systemd" --wait_until="Serving on"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation complete. Please report any issues you experience at https://github.com/YunoHost-Apps/writefreely_ynh/issues"
